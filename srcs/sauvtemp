
  hugo:
    container_name: hugo
    build:
      context: ./requirements/bonus/hugo
      dockerfile: Dockerfile
    restart: on-failure
    env_file: .env
    depends_on:
      - wordpress
    networks:
      - inception
    expose: ["9000"]
    ports:
      - "9000:9000"
    volumes:
      - wordpress_vol:/var/www/html


